{
  "$schema": "https://schemas.elgato.com/streamdeck/plugins/manifest.json",
  "Name": "Display Brightness Control",
  "Version": "1.0.2.0",
  "Author": "Raphiiko",
  "Description": "Control the brightness of external displays via DDC/CI",
  "Icon": "imgs/plugin/marketplace",
  "Category": "Display Brightness Control",
  "CategoryIcon": "imgs/plugin/category-icon",
  "CodePath": "bin/plugin.js",
  "SDKVersion": 3,
  "Software": {
    "MinimumVersion": "6.9"
  },
  "URL": "https://raphii.co",
  "SupportURL": "https://github.com/Raphiiklo/streamdeck-display-brightness",
  "OS": [
    {
      "Platform": "windows",
      "MinimumVersion": "10"
    }
  ],
  "Nodejs": {
    "Version": "20",
    "Debug": "--inspect=8084"
  },
  "Actions": [
    {
      "Name": "Display Brightness Control",
      "UUID": "co.raphii.streamdeck-display-brightness.dial",
      "Icon": "imgs/actions/brightness/icon",
      "Tooltip": "Control display brightness via DDC/CI",
      "Controllers": ["Encoder"],
      "Encoder": {
        "layout": "$B1",
        "TriggerDescription": {
          "Rotate": "Adjust brightness",
          "Push": "Toggle 0%/100%",
          "Touch": "Set to 100%",
          "LongTouch": "Set to 0%"
        }
      },
      "PropertyInspectorPath": "ui/brightness-dial-pi.html",
      "States": [
        {
          "Image": "imgs/actions/brightness/dial"
        }
      ]
    },
    {
      "Name": "Display Brightness Control",
      "UUID": "co.raphii.streamdeck-display-brightness.button",
      "Icon": "imgs/actions/brightness/icon",
      "Tooltip": "Control display brightness with a button",
      "Controllers": ["Keypad"],
      "States": [
        {
          "Image": "imgs/actions/brightness/dial"
        }
      ],
      "PropertyInspectorPath": "ui/brightness-button-pi.html",
      "SupportedInMultiActions": true,
      "UserTitleEnabled": true
    }
  ],
  "UUID": "co.raphii.streamdeck-display-brightness"
}
